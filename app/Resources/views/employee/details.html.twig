{% block body %}
    
<a class="btn btn-default" href="/" >Back</a>

<h2 class="page-header">{{ employee.firstName }} {{ employee.lastName }} </h2>
<ul class="list-group">
        <li class="list-group-item"> Email: {{ employee.email }}</li>
